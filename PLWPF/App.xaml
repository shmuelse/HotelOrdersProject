                        -->
            <!--<Grid Background="LightCyan">
                            <ScrollViewer x:Name="PART_ContentHost" .../>
                            <TextBlock .../>
                        </Grid>-->
            <!--
                        <ControlTemplate.Triggers>
                            -->
            <!-- removed -->
