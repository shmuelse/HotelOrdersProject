                Width="25" 
                Height="25" 
                BorderThickness="0"
                Background="Transparent"
                Template="{StaticResource TitleBarButtons}" 
                Margin="10 0" MouseEnter="Button_MouseEnter" 
                MouseLeave="Button_MouseLeave">
                    <Button.Content>
                        <Image 
